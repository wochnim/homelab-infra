global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:

  - job_name: "node_exporter"
    static_configs:
      - targets:
{% for host in groups['linux_servers'] %}
        - "{{ hostvars[host].ansible_host }}:9100"
{% endfor %}

  - job_name: "heatpump"
    static_configs:
      - targets:
{% for host in groups['heatpump_servers'] %}
        - "{{ hostvars[host].ansible_host }}:9105"
{% endfor %}

